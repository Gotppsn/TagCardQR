@{
    // This Razor directive block is required for layouts
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Card Tag Manager</title>
    <link rel="stylesheet" href="~/css/tailwind.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        /* CSS Media query for printing */
        @* Use the CSS comment for media query to avoid Razor conflicts *@
        /* Media query for print settings */
        @@media print {
            body {
                margin: 0;
                padding: 0;
                background: white;
            }
            .no-print {
                display: none !important;
            }
            .print-container {
                margin: 0;
                padding: 0;
            }
            @@page {
                size: 3.5in 2in; /* Business card standard size */
                margin: 0;
            }
        }
        
        .print-card {
            width: 3.5in;
            height: 2in;
            margin: 0 auto;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        
        .card-content {
            flex: 1;
            display: flex;
            padding: 0.25in;
        }
        
        .card-info {
            flex: 2;
            display: flex;
            flex-direction: column;
        }
        
        .card-qr {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .card-qr img {
            width: 0.8in;
            height: 0.8in;
        }
        
        .scan-text {
            font-size: 6pt;
            margin-top: 0.1in;
            text-align: center;
        }
        
        .card-name {
            font-size: 14pt;
            font-weight: bold;
            margin: 0;
            line-height: 1.2;
        }
        
        .card-title {
            font-size: 10pt;
            margin: 0.05in 0;
        }
        
        .card-company {
            font-size: 11pt;
            font-weight: bold;
            margin-bottom: 0.1in;
        }
        
        .card-details {
            font-size: 8pt;
            margin-top: auto;
        }
        
        .card-details p {
            margin: 0.05in 0;
            display: flex;
            align-items: center;
        }
        
        .card-details i {
            width: 0.15in;
            margin-right: 0.05in;
            text-align: center;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen p-6">
    <main>
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>