<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Card Tag Manager</title>
    <link rel="stylesheet" href="~/css/tailwind.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-white min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200 py-4">
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <h1 class="text-xl font-semibold text-purple-700 flex items-center">
                    <i class="fas fa-id-card mr-2"></i> Card Tag Manager
                </h1>
            </div>
        </div>
    </header>

    <nav class="bg-white border-b border-gray-200 py-2">
        <div class="container mx-auto px-4">
            <div class="flex justify-center space-x-4">
                <a asp-controller="Card" asp-action="Index" class="flex items-center text-gray-700 hover:text-purple-600">
                    <i class="fas fa-list mr-1"></i> All Cards
                </a>
                <a asp-controller="Card" asp-action="Create" class="flex items-center text-gray-700 hover:text-purple-600">
                    <i class="fas fa-plus mr-1"></i> New Card
                </a>
                <a asp-controller="Card" asp-action="PrintAll" class="flex items-center text-gray-700 hover:text-purple-600">
                    <i class="fas fa-print mr-1"></i> Print All
                </a>
            </div>
        </div>
    </nav>

    <main class="flex-grow container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 py-2">
        <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
            <p>&copy; @DateTime.Now.Year - Card Tag Manager</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>