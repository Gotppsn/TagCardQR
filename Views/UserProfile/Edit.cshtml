@model CardTagManager.Models.UserProfile
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl mx-auto my-8">
    <div class="bg-gradient-to-r from-blue-500 to-primary-500 p-6">
        <h1 class="text-white text-2xl font-bold">Edit Your Profile</h1>
        <p class="text-blue-100">Update your personal information</p>
    </div>
    
    <form asp-action="Edit" method="post" class="p-6">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Username" />
        <input type="hidden" asp-for="User_Code" />
        <input type="hidden" asp-for="FirstLoginAt" />
        <input type="hidden" asp-for="LastLoginAt" />
        <input type="hidden" asp-for="IsActive" />
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4">
                <div asp-validation-summary="All" class="text-sm"></div>
            </div>
        }
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h2 class="text-xl font-semibold text-gray-800 mb-4">English Information</h2>
                <div class="space-y-4">
                    <div>
                        <label asp-for="Detail_EN_FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                        <input asp-for="Detail_EN_FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                        <span asp-validation-for="Detail_EN_FirstName" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Detail_EN_LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <input asp-for="Detail_EN_LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                        <span asp-validation-for="Detail_EN_LastName" class="text-sm text-red-600"></span>
                    </div>
                </div>
            </div>
            
            <div>
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Thai Information</h2>
                <div class="space-y-4">
                    <div>
                        <label asp-for="Detail_TH_FirstName" class="block text-sm font-medium text-gray-700">First Name (TH)</label>
                        <input asp-for="Detail_TH_FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                        <span asp-validation-for="Detail_TH_FirstName" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Detail_TH_LastName" class="block text-sm font-medium text-gray-700">Last Name (TH)</label>
                        <input asp-for="Detail_TH_LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                        <span asp-validation-for="Detail_TH_LastName" class="text-sm text-red-600"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <hr class="my-6 border-gray-200">
        
        <div class="space-y-4">
            <div>
                <label asp-for="User_Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="User_Email" type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                <span asp-validation-for="User_Email" class="text-sm text-red-600"></span>
            </div>
            
            <div>
                <label asp-for="Department_Name" class="block text-sm font-medium text-gray-700">Department</label>
                <input asp-for="Department_Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                <span asp-validation-for="Department_Name" class="text-sm text-red-600"></span>
            </div>
            
            <div>
                <label asp-for="Plant_Name" class="block text-sm font-medium text-gray-700">Plant</label>
                <input asp-for="Plant_Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                <span asp-validation-for="Plant_Name" class="text-sm text-red-600"></span>
            </div>
        </div>
        
        <div class="mt-8 flex justify-end space-x-4">
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg flex items-center">
                <i class="fas fa-times mr-2"></i> Cancel
            </a>
            <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded-lg flex items-center">
                <i class="fas fa-save mr-2"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}