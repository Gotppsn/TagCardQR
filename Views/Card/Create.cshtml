                const fieldRow = e.target.closest('.custom-field-row');
                const optionsDiv = fieldRow.querySelector('.field-options');
                
                if (fieldType === 'select') {
                    optionsDiv.classList.remove('hidden');
                } else {
                    optionsDiv.classList.add('hidden');
