@model IEnumerable<ScanResultViewModel>

@{
    ViewData["Title"] = "Scan Results";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div class="space-y-2">
        <h1 class="text-3xl font-bold text-gray-900">QR Code Scan Results</h1>
        <p class="text-gray-500">View history of product tag scans</p>
    </div>
    
    <div class="flex items-center gap-3">
        <button id="clear-history-btn" class="btn-secondary">
            <i class="fas fa-trash-alt mr-2"></i> Clear History
        </button>
        <button id="export-results-btn" class="btn-primary">
            <i class="fas fa-file-export mr-2"></i> Export Results
        </button>
    </div>
</div>

<div class="bg-white rounded-xl shadow-md p-6 mb-8">
    <div class="flex flex-col md:flex-row items-center justify-between mb-6">
        <div class="flex items-center mb-4 md:mb-0">
            <div class="w-10 h-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mr-3">
                <i class="fas fa-qrcode"></i>
            </div>
            <div>
                <h2 class="text-lg font-bold">Scan History</h2>
                <p class="text-gray-500 text-sm">Showing recent scans</p>
            </div>
        </div>
        
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Search scans..." class="w-full px-3 py-2 pl-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
            <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                <i class="fas fa-search text-gray-400"></i>
            </div>
        </div>
    </div>
    
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Scan Time</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Device</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">@item.CardName</div>
                                        <div class="text-sm text-gray-500">ID: @item.CardId</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@item.ScanTime.ToString("MMM d, yyyy")</div>
                                <div class="text-sm text-gray-500">@item.ScanTime.ToString("h:mm tt")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@item.DeviceInfo</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@item.Location</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    Successful
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="#" class="text-primary-600 hover:text-primary-900 mr-3">View</a>
                                <a href="#" class="text-red-600 hover:text-red-900">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center">
                                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center text-gray-400 mb-4">
                                    <i class="fas fa-search text-2xl"></i>
                                </div>
                                <h3 class="text-lg font-medium text-gray-900 mb-1">No scan results found</h3>
                                <p class="text-gray-500 max-w-md">When products are scanned using the QR codes, the results will appear here.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="bg-white rounded-xl shadow-md p-6">
    <h3 class="text-lg font-bold mb-4">Scan Analytics</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-gray-50 p-4 rounded-lg">
            <div class="text-sm text-gray-500 mb-1">Total Scans</div>
            <div class="text-2xl font-bold">@Model.Count()</div>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg">
            <div class="text-sm text-gray-500 mb-1">Most Scanned Product</div>
            <div class="text-2xl font-bold">@(Model.Any() ? Model.GroupBy(x => x.CardName).OrderByDescending(g => g.Count()).FirstOrDefault()?.Key : "N/A")</div>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg">
            <div class="text-sm text-gray-500 mb-1">Last Scan</div>
            <div class="text-2xl font-bold">@(Model.Any() ? Model.Max(x => x.ScanTime).ToString("MMM d, yyyy") : "N/A")</div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Clear history button
        const clearHistoryBtn = document.getElementById('clear-history-btn');
        if (clearHistoryBtn) {
            clearHistoryBtn.addEventListener('click', function() {
                if (confirm('Are you sure you want to clear all scan history? This action cannot be undone.')) {
                    // Implement clear history logic
                    // Either submit form or make AJAX call to server
                    window.location.reload();
                }
            });
        }
        
        // Export results button
        const exportResultsBtn = document.getElementById('export-results-btn');
        if (exportResultsBtn) {
            exportResultsBtn.addEventListener('click', function() {
                // Implement export results logic
                alert('Export functionality will be implemented here');
            });
        }
        
        // Search functionality
        const searchInput = document.querySelector('input[placeholder="Search scans..."]');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');
                
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }
    });
</script>
}