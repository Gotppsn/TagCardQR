@model CardTagManager.Models.Card

@{
    ViewData["Title"] = "QR Code Deactivated";
    Layout = "_Layout"; // Use your layout file
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
        <div class="p-6 bg-red-50 border-b border-gray-200">
            <div class="flex items-center justify-center">
                <i class="fas fa-ban text-4xl text-red-500 mr-4"></i>
                <h1 class="text-2xl font-bold text-gray-800">QR Code Deactivated</h1>
            </div>
        </div>
        
        <div class="p-6">
            <div class="text-center mb-6">
                <p class="text-lg text-gray-700 mb-2">This QR code has been deactivated.</p>
                <p class="text-gray-600">The product "@Model.ProductName" is still in the system, but its QR code has been disabled by an administrator.</p>
            </div>
            
            <div class="flex justify-center mb-6">
                <div class="relative">
                    <div class="w-40 h-40 bg-white p-1 rounded shadow-sm">
                        @if (ViewBag.QrCodeImage != null)
                        {
                            <img src="@ViewBag.QrCodeImage" alt="QR Code" class="w-full h-full opacity-25">
                        }
                        else
                        {
                            <div class="w-full h-full bg-gray-100"></div>
                        }
                    </div>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <i class="fas fa-ban text-red-500 text-7xl opacity-75"></i>
                    </div>
                </div>
            </div>
            
            <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-red-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700">
                            If you need access to this product, please contact the system administrator.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="mt-6 text-center">
                <a href="/" class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 text-sm font-medium rounded-md transition-colors">
                    <i class="fas fa-home mr-2"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>