@model IEnumerable<CardTagManager.Models.Card>

@{
    ViewData["Title"] = "Print All Cards";
    Layout = "_PrintLayout";
}

<div class="no-print mb-6 flex justify-between items-center">
    <a asp-action="Index" class="text-primary-600 hover:text-primary-800 transition-colors flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Back to Product List
    </a>
    <button onclick="window.print()" class="btn-primary">
        <i class="fas fa-print mr-2"></i> Print All Products
    </button>
</div>

<div class="print-container">
    @foreach (var product in Model)
    {
        <div class="print-card-wrapper mb-12">
            <div class="print-card" style="background-color: @@product.BackgroundColor; color: @product.TextColor;">
                <div class="card-content">
                    <div class="card-info">
                        <h3 class="card-name" style="color: @product.AccentColor">@@product.ProductName</h3>
                        <p class="card-title">@@product.Manufacturer</p>
                        
                        <div class="card-details">
                            <p><i class="fas fa-tag" style="color: @product.AccentColor"></i>@product.ModelNumber</p>
                            <p><i class="fas fa-fingerprint" style="color: @product.AccentColor"></i>@product.SerialNumber</p>
                            <p><i class="fas fa-map-marker-alt" style="color: @product.AccentColor"></i>@product.Location</p>
                            <p><i class="fas fa-calendar-check" style="color: @product.AccentColor"></i>Warranty: @product.WarrantyExpiration.ToString("MM/dd/yyyy")</p>
                        </div>
                    </div>
                    
                    <div class="card-qr">
                        <img src="@ViewBag.QrCodes[product.Id]" alt="QR Code" />
                        <p class="scan-text">Scan for Details</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>