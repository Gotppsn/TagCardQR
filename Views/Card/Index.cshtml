@model IEnumerable<CardTagManager.Models.Card>

@{
    ViewData["Title"] = "Card Library";
}

<div class="mb-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">Your Card Library</h1>
            <p class="text-gray-500">Manage your business cards and generate QR codes for easy sharing</p>
        </div>
        
        <a asp-action="Create" class="btn-primary self-start md:self-auto">
            <i class="fas fa-plus"></i> Add New Card
        </a>
    </div>
    
    <div class="bg-white shadow-sm rounded-xl p-4 mb-6">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="search-container w-full md:w-72">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="card-search" placeholder="Search cards..." class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" />
            </div>
            
            <div class="flex items-center gap-3">
                <div class="inline-flex rounded-lg shadow-sm bg-gray-100 p-1">
                    <button id="all-cards-btn" class="px-4 py-2 rounded-lg bg-white shadow-sm text-blue-600 font-medium transition-all">
                        <i class="fas fa-layer-group mr-2"></i> All Cards
                    </button>
                    <button id="recently-updated-btn" class="px-4 py-2 rounded-lg text-gray-500 hover:text-gray-700 transition-all">
                        <i class="fas fa-clock mr-2"></i> Recent
                    </button>
                </div>
                
                <a asp-action="PrintAll" class="btn-secondary">
                    <i class="fas fa-print"></i> Print All
                </a>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center fade-in">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 text-blue-500 mb-4">
            <i class="fas fa-id-card text-2xl"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-2">No cards found</h3>
        <p class="text-gray-500 mb-6 max-w-md mx-auto">Get started by creating your first business card. You can add contact details and customize its appearance.</p>
        <a asp-action="Create" class="btn-primary inline-flex">
            <i class="fas fa-plus mr-2"></i> Create First Card
        </a>
    </div>
}
else
{
    <div id="cards-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 fade-in">
        @foreach (var card in Model)
        {
            <div class="card-item group" data-updated="@card.UpdatedAt.ToString("yyyy-MM-dd")">
                <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 h-full">
                    <div class="p-6" style="background-color: @card.BackgroundColor; color: @card.TextColor;">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h3 class="text-xl font-bold mb-1" style="color: @card.AccentColor">@card.Name</h3>
                                <p class="text-sm opacity-90">@card.Title</p>
                            </div>
                            <div class="flex">
                                <a asp-action="Edit" asp-route-id="@card.Id" class="p-2 rounded-full hover:bg-white hover:bg-opacity-20 transition-colors" title="Edit Card">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Print" asp-route-id="@card.Id" class="p-2 rounded-full hover:bg-white hover:bg-opacity-20 transition-colors" title="Print Card">
                                    <i class="fas fa-print"></i>
                                </a>
                            </div>
                        </div>
                        
                        <p class="font-semibold text-lg mb-4">@card.Company</p>
                        
                        <div class="space-y-2">
                            <p class="flex items-center text-sm">
                                <i class="fas fa-envelope mr-3 w-5 text-center" style="color: @card.AccentColor"></i>@card.Email
                            </p>
                            <p class="flex items-center text-sm">
                                <i class="fas fa-phone mr-3 w-5 text-center" style="color: @card.AccentColor"></i>@card.Phone
                            </p>
                            @if (!string.IsNullOrEmpty(card.Address))
                            {
                                <p class="flex items-center text-sm">
                                    <i class="fas fa-map-marker-alt mr-3 w-5 text-center" style="color: @card.AccentColor"></i>
                                    <span class="truncate">@card.Address</span>
                                </p>
                            }
                        </div>
                    </div>
                    
                    <div class="p-4 flex items-center justify-between bg-gray-50 border-t border-gray-100">
                        <span class="text-xs text-gray-500 flex items-center">
                            <i class="far fa-clock mr-2"></i> 
                            Updated @((DateTime.Now - card.UpdatedAt).TotalDays < 1 ? "today" : card.UpdatedAt.ToString("MMM d"))
                        </span>
                        
                        <div class="flex items-center space-x-1">
                            <a asp-action="Details" asp-route-id="@card.Id" class="p-2 rounded-full text-gray-500 hover:text-blue-600 hover:bg-blue-50 transition-colors" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="QrCode" asp-route-id="@card.Id" class="p-2 rounded-full text-gray-500 hover:text-blue-600 hover:bg-blue-50 transition-colors" title="QR Code">
                                <i class="fas fa-qrcode"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@card.Id" class="p-2 rounded-full text-gray-500 hover:text-red-600 hover:bg-red-50 transition-colors" title="Delete Card">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Card search functionality
        const searchInput = document.getElementById('card-search');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                const cards = document.querySelectorAll('.card-item');
                
                cards.forEach(card => {
                    const cardText = card.textContent.toLowerCase();
                    if (searchTerm === '' || cardText.includes(searchTerm)) {
                        card.style.display = '';
                        card.classList.add('fade-in');
                    } else {
                        card.style.display = 'none';
                        card.classList.remove('fade-in');
                    }
                });
                
                // Check if we have visible cards
                const visibleCards = [...document.querySelectorAll('.card-item')].filter(card => card.style.display !== 'none');
                const noResultsElem = document.getElementById('no-search-results');
                
                if (visibleCards.length === 0 && searchTerm !== '' && !noResultsElem) {
                    const container = document.getElementById('cards-container');
                    const noResults = document.createElement('div');
                    noResults.id = 'no-search-results';
                    noResults.className = 'col-span-full py-10 px-6 text-center bg-white rounded-xl shadow-sm border border-gray-100 fade-in';
                    noResults.innerHTML = `
                        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-50 text-gray-400 mb-4">
                            <i class="fas fa-search text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">No results found</h3>
                        <p class="text-gray-500">No cards match your search for "${searchTerm}"</p>
                    `;
                    container.appendChild(noResults);
                } else if ((visibleCards.length > 0 || searchTerm === '') && noResultsElem) {
                    noResultsElem.remove();
                }
            });
        }
        
        // Filter buttons
        const allCardsBtn = document.getElementById('all-cards-btn');
        const recentlyUpdatedBtn = document.getElementById('recently-updated-btn');
        
        if (allCardsBtn && recentlyUpdatedBtn) {
            allCardsBtn.addEventListener('click', function() {
                allCardsBtn.classList.add('bg-white', 'shadow-sm', 'text-blue-600', 'font-medium');
                recentlyUpdatedBtn.classList.remove('bg-white', 'shadow-sm', 'text-blue-600', 'font-medium');
                recentlyUpdatedBtn.classList.add('text-gray-500');
                
                const cards = document.querySelectorAll('.card-item');
                cards.forEach(card => {
                    card.style.display = '';
                    card.classList.add('fade-in');
                });
                
                // Remove any "no results" message
                const noRecentElem = document.getElementById('no-recent-cards');
                if (noRecentElem) {
                    noRecentElem.remove();
                }
            });
            
            recentlyUpdatedBtn.addEventListener('click', function() {
                recentlyUpdatedBtn.classList.add('bg-white', 'shadow-sm', 'text-blue-600', 'font-medium');
                allCardsBtn.classList.remove('bg-white', 'shadow-sm', 'text-blue-600', 'font-medium');
                allCardsBtn.classList.add('text-gray-500');
                
                const cards = document.querySelectorAll('.card-item');
                const today = new Date();
                const oneWeekAgo = new Date();
                oneWeekAgo.setDate(today.getDate() - 7);
                
                let foundRecent = false;
                
                cards.forEach(card => {
                    const updatedDate = new Date(card.getAttribute('data-updated'));
                    
                    if (updatedDate >= oneWeekAgo) {
                        card.style.display = '';
                        card.classList.add('fade-in');
                        foundRecent = true;
                    } else {
                        card.style.display = 'none';
                        card.classList.remove('fade-in');
                    }
                });
                
                // Show message if no recent cards
                const noRecentElem = document.getElementById('no-recent-cards');
                
                if (!foundRecent && !noRecentElem) {
                    const container = document.getElementById('cards-container');
                    const noRecent = document.createElement('div');
                    noRecent.id = 'no-recent-cards';
                    noRecent.className = 'col-span-full py-10 px-6 text-center bg-white rounded-xl shadow-sm border border-gray-100 fade-in';
                    noRecent.innerHTML = `
                        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 text-blue-400 mb-4">
                            <i class="fas fa-calendar-alt text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">No recent cards</h3>
                        <p class="text-gray-500">No cards have been updated in the last 7 days</p>
                    `;
                    container.appendChild(noRecent);
                } else if (foundRecent && noRecentElem) {
                    noRecentElem.remove();
                }
            });
        }
        
        // Optional: Add click event to card-item for navigation
        const cardItems = document.querySelectorAll('.card-item');
        cardItems.forEach(card => {
            card.addEventListener('click', function(e) {
                // Only navigate if the click wasn't on an action button
                if (!e.target.closest('a')) {
                    const viewLink = this.querySelector('a[asp-action="Details"]');
                    if (viewLink) {
                        window.location.href = viewLink.getAttribute('href');
                    }
                }
            });
        });
    });
</script>
}