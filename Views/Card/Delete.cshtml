@model CardTagManager.Models.Card

@{
    ViewData["Title"] = "Delete Card";
}

<div class="mb-6">
    <a asp-action="Index" class="text-primary-600 hover:text-primary-800">
        <i class="fas fa-arrow-left mr-1"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="p-6">
        <h1 class="text-2xl font-bold mb-2 text-red-600">Delete Card</h1>
        <p class="mb-4 text-gray-600">Are you sure you want to delete this card? This action cannot be undone.</p>
        
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle text-red-500"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Warning</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p>This action will permanently delete the card for @Model.Name.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card p-0 mb-6" style="background-color: @Model.BackgroundColor; color: @Model.TextColor">
            <div class="p-4">
                <div class="mb-3">
                    <h3 class="text-xl font-bold" style="color: @Model.AccentColor">@Model.Name</h3>
                    <p class="text-sm">@Model.Title</p>
                    <p class="font-bold">@Model.Company</p>
                </div>
                <div class="space-y-1 text-sm">
                    <p><i class="fas fa-envelope mr-2" style="color: @Model.AccentColor"></i>@Model.Email</p>
                    <p><i class="fas fa-phone mr-2" style="color: @Model.AccentColor"></i>@Model.Phone</p>
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <p><i class="fas fa-map-marker-alt mr-2" style="color: @Model.AccentColor"></i>@Model.Address</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <p><i class="fas fa-globe mr-2" style="color: @Model.AccentColor"></i>@Model.Website</p>
                    }
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-end">
                <a asp-action="Index" class="btn-secondary mr-2">Cancel</a>
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                    <i class="fas fa-trash mr-1"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>