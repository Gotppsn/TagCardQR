@model CardTagManager.Models.Card

@{
    ViewData["Title"] = "Card Details";
}

<div class="mb-6">
    <a asp-action="Index" class="text-primary-600 hover:text-primary-800">
        <i class="fas fa-arrow-left mr-1"></i> Back to List
    </a>
</div>

<div class="flex flex-col md:flex-row gap-6">
    <div class="md:w-1/2">
        <div class="card p-0" style="background-color: @Model.BackgroundColor; color: @Model.TextColor">
            <div class="p-6">
                <div class="mb-4">
                    <h3 class="text-2xl font-bold" style="color: @Model.AccentColor">@Model.Name</h3>
                    <p class="text-lg">@Model.Title</p>
                    <p class="text-xl font-bold">@Model.Company</p>
                </div>
                <div class="space-y-2">
                    <p><i class="fas fa-envelope mr-2" style="color: @Model.AccentColor"></i>@Model.Email</p>
                    <p><i class="fas fa-phone mr-2" style="color: @Model.AccentColor"></i>@Model.Phone</p>
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <p><i class="fas fa-map-marker-alt mr-2" style="color: @Model.AccentColor"></i>@Model.Address</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <p><i class="fas fa-globe mr-2" style="color: @Model.AccentColor"></i>@Model.Website</p>
                    }
                </div>
            </div>
            <div class="p-6 bg-gray-50 flex justify-center">
                <img src="@ViewBag.QrCodeImage" alt="QR Code" class="h-40 w-40" />
            </div>
        </div>
    </div>
    
    <div class="md:w-1/2">
        <div class="card">
            <div class="p-6">
                <h3 class="text-xl font-bold mb-4">Card Details</h3>
                <dl class="space-y-2">
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">ID:</dt>
                        <dd class="col-span-2">@Model.Id</dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">Created:</dt>
                        <dd class="col-span-2">@Model.CreatedAt.ToString("g")</dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">Last Updated:</dt>
                        <dd class="col-span-2">@Model.UpdatedAt.ToString("g")</dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">Background:</dt>
                        <dd class="col-span-2 flex items-center">
                            <span class="inline-block h-4 w-4 mr-2 rounded" style="background-color: @Model.BackgroundColor"></span>
                            @Model.BackgroundColor
                        </dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">Text Color:</dt>
                        <dd class="col-span-2 flex items-center">
                            <span class="inline-block h-4 w-4 mr-2 rounded" style="background-color: @Model.TextColor"></span>
                            @Model.TextColor
                        </dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4">
                        <dt class="text-gray-600">Accent Color:</dt>
                        <dd class="col-span-2 flex items-center">
                            <span class="inline-block h-4 w-4 mr-2 rounded" style="background-color: @Model.AccentColor"></span>
                            @Model.AccentColor
                        </dd>
                    </div>
                </dl>
            </div>
            
            <div class="p-4 bg-gray-50 flex gap-2 justify-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-secondary">
                    <i class="fas fa-edit mr-1"></i> Edit
                </a>
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn-primary">
                    <i class="fas fa-print mr-1"></i> Print
                </a>
            </div>
        </div>
    </div>
</div>