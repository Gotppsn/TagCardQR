@model CardTagManager.Models.Card

@{
    ViewData["Title"] = "Card Details";
}

<div class="mb-6">
    <a asp-action="Index" class="text-primary-600 hover:text-primary-800 flex items-center group">
        <i class="fas fa-arrow-left mr-2 group-hover:-translate-x-1 transition-transform"></i> Back to Library
    </a>
</div>

<div class="flex flex-col lg:flex-row gap-8">
    <!-- Card Display Section -->
    <div class="lg:w-1/2">
        <div class="card-container">
            <div class="business-card">
                <div class="card-flip-container">
                    <!-- Card Front -->
                    <div class="card-side card-front" style="background-color: @Model.BackgroundColor; color: @Model.TextColor">
                        <div class="p-6 h-full flex flex-col">
                            <div class="mb-4">
                                <h3 class="text-2xl font-bold" style="color: @Model.AccentColor">@Model.Name</h3>
                                <p class="text-lg">@Model.Title</p>
                                <p class="text-xl font-bold">@Model.Company</p>
                            </div>
                            <div class="space-y-2 mt-auto">
                                <p class="flex items-center"><i class="fas fa-envelope mr-3" style="color: @Model.AccentColor"></i>@Model.Email</p>
                                <p class="flex items-center"><i class="fas fa-phone mr-3" style="color: @Model.AccentColor"></i>@Model.Phone</p>
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    <p class="flex items-center"><i class="fas fa-map-marker-alt mr-3" style="color: @Model.AccentColor"></i>@Model.Address</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Website))
                                {
                                    <p class="flex items-center"><i class="fas fa-globe mr-3" style="color: @Model.AccentColor"></i>@Model.Website</p>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <!-- Card Back -->
                    <div class="card-side card-back" style="background-color: @Model.BackgroundColor; color: @Model.TextColor">
                        <div class="h-full flex items-center justify-center p-4">
                            <div class="text-center">
                                <div class="mb-4">
                                    <img src="@ViewBag.QrCodeImage" alt="QR Code" class="mx-auto h-40 w-40 rounded-lg shadow-md" />
                                </div>
                                <p class="text-sm font-medium" style="color: @Model.AccentColor">Scan to Save Contact</p>
                                <p class="text-xs mt-2 text-gray-600">@Model.Company</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 flex justify-center">
                <button class="flip-card-btn btn-secondary">
                    <i class="fas fa-sync-alt mr-1"></i> Show QR Code
                </button>
            </div>
        </div>
    </div>
    
    <!-- Card Details Section -->
    <div class="lg:w-1/2">
        <div class="card">
            <div class="p-6">
                <h3 class="text-xl font-bold mb-4 flex items-center">
                    <i class="fas fa-info-circle mr-2 text-primary-600"></i> Card Details
                </h3>
                <dl class="space-y-4">
                    <div class="grid grid-cols-3 gap-4 items-center border-b pb-3">
                        <dt class="text-gray-600 font-medium">ID:</dt>
                        <dd class="col-span-2">@Model.Id</dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4 items-center border-b pb-3">
                        <dt class="text-gray-600 font-medium">Created:</dt>
                        <dd class="col-span-2">
                            <span class="flex items-center">
                                <i class="far fa-calendar-alt mr-2 text-primary-500"></i>
                                @Model.CreatedAt.ToString("MMMM d, yyyy") at @Model.CreatedAt.ToString("h:mm tt")
                            </span>
                        </dd>
                    </div>
                    <div class="grid grid-cols-3 gap-4 items-center border-b pb-3">
                        <dt class="text-gray-600 font-medium">Last Updated:</dt>
                        <dd class="col-span-2">
                            <span class="flex items-center">
                                <i class="far fa-clock mr-2 text-primary-500"></i>
                                @Model.UpdatedAt.ToString("MMMM d, yyyy") at @Model.UpdatedAt.ToString("h:mm tt")
                            </span>
                        </dd>
                    </div>
                </dl>
                
                <h4 class="text-lg font-medium mt-6 mb-3 flex items-center">
                    <i class="fas fa-palette mr-2 text-primary-600"></i> Color Scheme
                </h4>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div class="bg-white rounded-lg border p-3 text-center">
                        <div class="w-full h-12 rounded mb-2 shadow-inner" style="background-color: @Model.BackgroundColor"></div>
                        <p class="text-sm font-medium">Background</p>
                        <p class="text-xs text-gray-500 font-mono">@Model.BackgroundColor</p>
                    </div>
                    <div class="bg-white rounded-lg border p-3 text-center">
                        <div class="w-full h-12 rounded mb-2 shadow-inner" style="background-color: @Model.TextColor"></div>
                        <p class="text-sm font-medium">Text</p>
                        <p class="text-xs text-gray-500 font-mono">@Model.TextColor</p>
                    </div>
                    <div class="bg-white rounded-lg border p-3 text-center">
                        <div class="w-full h-12 rounded mb-2 shadow-inner" style="background-color: @Model.AccentColor"></div>
                        <p class="text-sm font-medium">Accent</p>
                        <p class="text-xs text-gray-500 font-mono">@Model.AccentColor</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-gray-50 flex gap-3 justify-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-secondary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn-primary print-button">
                    <i class="fas fa-print"></i> Print
                </a>
            </div>
        </div>
        
        <!-- Contact Options -->
        <div class="mt-6 card">
            <div class="p-6">
                <h3 class="text-xl font-bold mb-4 flex items-center">
                    <i class="fas fa-share-alt mr-2 text-primary-600"></i> Share Options
                </h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <a href="mailto:?subject=Contact Card for @Model.Name&body=Please find the contact details for @Model.Name:%0D%0A%0D%0AName: @Model.Name%0D%0ATitle: @Model.Title%0D%0ACompany: @Model.Company%0D%0AEmail: @Model.Email%0D%0APhone: @Model.Phone" 
                       class="text-center p-4 rounded-lg border hover:bg-gray-50 transition-colors group">
                        <i class="fas fa-envelope text-2xl text-primary-600 mb-3 group-hover:scale-110 transition-transform"></i>
                        <p class="text-sm font-medium">Email</p>
                    </a>
                    <button onclick="copyContactInfo(); return false;" 
                            class="text-center p-4 rounded-lg border hover:bg-gray-50 transition-colors group">
                        <i class="fas fa-copy text-2xl text-primary-600 mb-3 group-hover:scale-110 transition-transform"></i>
                        <p class="text-sm font-medium">Copy Info</p>
                    </button>
                    <a asp-action="Vcf" asp-route-id="@Model.Id" class="text-center p-4 rounded-lg border hover:bg-gray-50 transition-colors group">
                        <i class="fas fa-address-card text-2xl text-primary-600 mb-3 group-hover:scale-110 transition-transform"></i>
                        <p class="text-sm font-medium">Download VCF</p>
                    </a>
                    <a href="#" onclick="openQrCodePopup(); return false;" 
                       class="text-center p-4 rounded-lg border hover:bg-gray-50 transition-colors group">
                        <i class="fas fa-qrcode text-2xl text-primary-600 mb-3 group-hover:scale-110 transition-transform"></i>
                        <p class="text-sm font-medium">View QR</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function copyContactInfo() {
        const contactInfo = `Name: @Model.Name
Title: @Model.Title
Company: @Model.Company
Email: @Model.Email
Phone: @Model.Phone
@if (!string.IsNullOrEmpty(Model.Address))
{
@:Address: @Model.Address
}
@if (!string.IsNullOrEmpty(Model.Website))
{
@:Website: @Model.Website
}`;

        navigator.clipboard.writeText(contactInfo).then(() => {
            showNotification('Contact information copied to clipboard!');
        }, () => {
            showNotification('Failed to copy contact information', 'error');
        });
    }
    
    function openQrCodePopup() {
        window.open('@Url.Action("QrCode", "Card", new { id = Model.Id })', 'QR Code', 'width=320,height=380'); 
        return false;
    }
</script>
}