@model CardTagManager.Models.Card

@{
    ViewData["Title"] = "Card Details";
}

<div class="mb-6">
    <a asp-action="Index" class="text-primary-600 hover:text-primary-800">
        <i class="fas fa-arrow-left mr-1"></i> Back to List
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Card Preview -->
    <div class="lg:col-span-1">
        <div class="sticky top-6">
            <h2 class="text-xl font-bold mb-4">Card Preview</h2>
            
            <div class="business-card mb-4" style="background-color: @Model.BackgroundColor; color: @Model.TextColor">
                <div class="p-4">
                    <div class="mb-3">
                        <h3 class="text-xl font-bold" style="color: @Model.AccentColor">@Model.ProductName</h3>
                        <p class="text-sm">@Model.Title</p>
                        <p class="font-bold">@Model.Manufacturer</p>
                    </div>
                    <div class="space-y-1 text-sm">
                        <p><i class="fas fa-envelope mr-2" style="color: @Model.AccentColor"></i>@Model.Email</p>
                        <p><i class="fas fa-phone mr-2" style="color: @Model.AccentColor"></i>@Model.Phone</p>
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <p><i class="fas fa-map-marker-alt mr-2" style="color: @Model.AccentColor"></i>@Model.Address</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <p><i class="fas fa-globe mr-2" style="color: @Model.AccentColor"></i>@Model.Website</p>
                        }
                    </div>
                </div>
            </div>

            <!-- QR Code -->
            <div class="card p-4 mb-4">
                <h3 class="font-bold mb-2">QR Code</h3>
                <div class="flex justify-center">
                    <img src="@ViewBag.QrCodeImage" alt="QR Code" class="w-40 h-40 border border-gray-200 p-2 rounded" />
                </div>
                <p class="text-center text-sm text-gray-500 mt-2">Scan for details</p>
            </div>
            
            <!-- Actions -->
            <div class="flex flex-col gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">
                    <i class="fas fa-edit mr-2"></i> Edit Card
                </a>
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn-secondary">
                    <i class="fas fa-print mr-2"></i> Print Card
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-danger">
                    <i class="fas fa-trash mr-2"></i> Delete Card
                </a>
            </div>
        </div>
    </div>

    <!-- Card Information -->
    <div class="lg:col-span-2">
        <div class="card">
            <div class="card-header">
                <h2 class="text-xl font-bold">Card Information</h2>
                <p class="text-sm text-gray-500">Created on @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
            </div>
            
            <div class="card-body">
                <div class="mb-8">
                    <h3 class="font-bold text-lg mb-3 text-gray-700">Basic Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Product Name</p>
                            <p class="font-medium">@Model.ProductName</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Manufacturer</p>
                            <p class="font-medium">@Model.Manufacturer</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Category</p>
                            <p class="font-medium">@Model.Category</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Title</p>
                            <p class="font-medium">@Model.Title</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-8">
                    <h3 class="font-bold text-lg mb-3 text-gray-700">Contact Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Email</p>
                            <p class="font-medium">@Model.Email</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Phone</p>
                            <p class="font-medium">@Model.Phone</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Address</p>
                            <p class="font-medium">@Model.Address</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Website</p>
                            <p class="font-medium">@Model.Website</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-8">
                    <h3 class="font-bold text-lg mb-3 text-gray-700">Product Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Model Number</p>
                            <p class="font-medium">@Model.ModelNumber</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Serial Number</p>
                            <p class="font-medium">@Model.SerialNumber</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Location</p>
                            <p class="font-medium">@Model.Location</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Maintenance Info</p>
                            <p class="font-medium">@Model.MaintenanceInfo</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-8">
                    <h3 class="font-bold text-lg mb-3 text-gray-700">Timeline</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Manufacture Date</p>
                            <p class="font-medium">@Model.ManufactureDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Purchase Date</p>
                            <p class="font-medium">@Model.PurchaseDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Warranty Expiration</p>
                            <p class="font-medium">@Model.WarrantyExpiration.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
                
                <div>
                    <h3 class="font-bold text-lg mb-3 text-gray-700">Appearance</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Background Color</p>
                            <div class="flex items-center mt-1">
                                <div class="w-6 h-6 rounded mr-2 border border-gray-200" style="background-color: @Model.BackgroundColor"></div>
                                <p class="font-mono text-sm">@Model.BackgroundColor</p>
                            </div>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Text Color</p>
                            <div class="flex items-center mt-1">
                                <div class="w-6 h-6 rounded mr-2 border border-gray-200" style="background-color: @Model.TextColor"></div>
                                <p class="font-mono text-sm">@Model.TextColor</p>
                            </div>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Accent Color</p>
                            <div class="flex items-center mt-1">
                                <div class="w-6 h-6 rounded mr-2 border border-gray-200" style="background-color: @Model.AccentColor"></div>
                                <p class="font-mono text-sm">@Model.AccentColor</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-footer">
                <p class="text-sm text-gray-500">Last updated: @Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</p>
            </div>
        </div>
    </div>
</div>